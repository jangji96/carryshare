<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateMemberScreen"
    android:orientation="vertical"
    android:background="@drawable/background_login3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="#bcbcbc"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:hint="ID"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>

        <EditText
            android:id="@+id/new_pw"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:password="true"
            android:hint="PASSWORD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>

        <EditText
            android:id="@+id/new_name"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:singleLine="true"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:hint="이름"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>

        <EditText
            android:id="@+id/new_phone"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:singleLine="true"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:hint="전화번호"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"></LinearLayout>
        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="수정"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#666666"
            android:onClick="updateMember"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="showMyPage"
            android:background="#00ff0000"/>
    </LinearLayout>

</LinearLayout>